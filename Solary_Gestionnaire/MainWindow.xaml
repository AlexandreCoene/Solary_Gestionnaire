<Window x:Class="Solary_Gestionnaire.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Solary_Gestionnaire"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <!-- Define a uniform grid layout for sidebar and content -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar Navigation -->
        <StackPanel Background="#2A2A3D" Width="200" VerticalAlignment="Stretch">
            <TextBlock Text="Gestionnaire" Foreground="White" FontSize="24" FontWeight="Bold" Padding="10"/>
            <Button Content="Accueil" Style="{StaticResource NavigationButtonStyle}" Margin="10,5" Click="Accueil_Button_Click"/>
            <Button Content="Gestionnaire Bornes" Style="{StaticResource NavigationButtonStyle}" Margin="10,5" Click="GestionnaireBornes_Button_Click"/>
            <Button Content="Gestionnaire User" Style="{StaticResource NavigationButtonStyle}" Margin="10,5" Click="GestionnaireUser_Click"/>
            <Button Content="Statistique" Style="{StaticResource NavigationButtonStyle}" Margin="10,5" Click="Statistique_Button_Click"/>
            <Button Content="Panne et Maintenance" Style="{StaticResource NavigationButtonStyle}" Margin="10,5" Click="PanneMaintenance_Button_Click"/>

        </StackPanel>

        <!-- Content Area -->
        <Grid x:Name="MainGrid" Grid.Column="1" Background="#1E1E2F">
            <Border Margin="20" Background="#2E2E3F" CornerRadius="10" Padding="15">
                <TextBlock Text="Bienvenue dans l'application de gestion" Foreground="White" FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </Border>
        </Grid>
    </Grid>

    <Window.Resources>
        <!-- Style for navigation buttons -->
        <Style x:Key="NavigationButtonStyle" TargetType="Button">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#3A3A4F"/>
            <Setter Property="Margin" Value="10,5"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#4A4A5F"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
</Window>