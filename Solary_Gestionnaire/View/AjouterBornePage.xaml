<UserControl x:Class="Solary_Gestionnaire.View.AjouterBornePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Solary_Gestionnaire.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="#1E1E2F">

    <Grid x:Name="MainGrid" Background="#1E1E2F">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- En-tête avec titre et bouton de retour -->
        <Grid Grid.Row="0" Margin="20,20,20,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Content="← Retour" 
                    Click="RetourButton_Click"
                    Background="Transparent" 
                    Foreground="White" 
                    BorderThickness="0"
                    Padding="5"
                    Margin="0,0,10,0"/>

            <TextBlock Grid.Column="1" 
                       Text="Ajouter une Borne de Recharge" 
                       FontSize="24" 
                       Foreground="White" 
                       FontWeight="Bold"/>
        </Grid>

        <!-- Indicateurs de chargement, erreur et succès -->
        <StackPanel Grid.Row="1" Margin="20,0,20,10">
            <!-- Indicateur de chargement -->
            <ProgressBar Height="5" 
                         IsIndeterminate="True" 
                         Visibility="{Binding LoadingVisibility}"/>

            <!-- Message d'erreur -->
            <TextBlock Text="{Binding ErrorMessage}" 
                       Foreground="#D0021B" 
                       FontSize="14" 
                       TextWrapping="Wrap"
                       Margin="0,5,0,0"
                       Visibility="{Binding ErrorVisibility}"/>

            <!-- Message de succès -->
            <TextBlock Text="{Binding SuccessMessage}" 
                       Foreground="#4CAF50" 
                       FontSize="14" 
                       TextWrapping="Wrap"
                       Margin="0,5,0,0"
                       Visibility="{Binding SuccessVisibility}"/>
        </StackPanel>

        <!-- Formulaire d'ajout -->
        <Border Grid.Row="2" 
                Background="#2A2A3D" 
                CornerRadius="10" 
                Padding="20" 
                Margin="20,0,20,20">
            <StackPanel>
                <TextBlock Text="Informations de la Borne" 
                           FontSize="18" 
                           Foreground="White" 
                           FontWeight="Bold" 
                           Margin="0,0,0,20"/>

                <!-- Emplacement -->
                <TextBlock Text="Emplacement" 
                           Foreground="LightGray" 
                           Margin="0,0,0,5"/>
                <TextBox Text="{Binding Location, UpdateSourceTrigger=PropertyChanged}" 
                         Padding="10" 
                         Margin="0,0,0,15"
                         Background="#1E1E2F"
                         Foreground="White"
                         BorderBrush="#4A4A6A"/>

                <!-- Disponibilité -->
                <CheckBox Content="Disponible" 
                          IsChecked="{Binding IsAvailable}" 
                          Foreground="LightGray" 
                          Margin="0,0,0,20"/>

                <!-- Bouton d'ajout -->
                <Button Content="Ajouter la Borne" 
                        Click="AjouterButton_Click"
                        Background="#4CAF50" 
                        Foreground="White" 
                        Padding="15,10" 
                        HorizontalAlignment="Center"
                        Width="200"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
