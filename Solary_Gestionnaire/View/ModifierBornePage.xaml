<UserControl x:Class="Solary_Gestionnaire.View.ModifierBornePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Solary_Gestionnaire.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid x:Name="MainGrid" Background="#1E1E2F">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- En-tête avec titre et bouton de retour -->
        <Grid Grid.Row="0" Margin="15,15,15,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Content="← Retour" 
                    Click="RetourButton_Click"
                    Background="Transparent" 
                    Foreground="White" 
                    BorderThickness="0"
                    Padding="5"
                    Margin="0,0,10,0"/>

            <TextBlock Grid.Column="1" 
                       Text="{Binding BorneId, StringFormat=Modifier la Borne #{0}}" 
                       FontSize="20" 
                       Foreground="White" 
                       FontWeight="Bold"/>
        </Grid>

        <!-- Indicateurs de chargement, erreur et succès -->
        <StackPanel Grid.Row="1" Margin="15,0,15,5">
            <!-- Indicateur de chargement -->
            <ProgressBar Height="3" 
                         IsIndeterminate="True" 
                         Visibility="{Binding LoadingVisibility}"/>

            <!-- Message d'erreur -->
            <TextBlock Text="{Binding ErrorMessage}" 
                       Foreground="#D0021B" 
                       FontSize="12" 
                       TextWrapping="Wrap"
                       Margin="0,3,0,0"
                       Visibility="{Binding ErrorVisibility}"/>

            <!-- Message de succès -->
            <TextBlock Text="{Binding SuccessMessage}" 
                       Foreground="#4CAF50" 
                       FontSize="12" 
                       TextWrapping="Wrap"
                       Margin="0,3,0,0"
                       Visibility="{Binding SuccessVisibility}"/>
        </StackPanel>

        <!-- Formulaire de modification - Version compacte -->
        <Border Grid.Row="2" Background="#2A2A3D" CornerRadius="10" Padding="15" Margin="15,0,15,15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Titre du formulaire -->
                <TextBlock Grid.Row="0" 
                           Text="Informations de la Borne" 
                           FontSize="16" 
                           Foreground="White" 
                           FontWeight="Bold" 
                           Margin="0,0,0,10"/>

                <!-- Contenu du formulaire -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Colonne gauche -->
                    <StackPanel Grid.Column="0" Margin="0,0,5,0">
                        <!-- ID (en lecture seule) -->
                        <DockPanel Margin="0,0,0,8">
                            <TextBlock Text="ID:" 
                                       Foreground="LightGray" 
                                       Width="80"/>
                            <TextBox Text="{Binding BorneId, Mode=OneWay}" 
                                     Height="24"
                                     Background="#1E1E2F"
                                     Foreground="Gray"
                                     BorderBrush="#4A4A6A"
                                     IsReadOnly="True"/>
                        </DockPanel>

                        <!-- Nom -->
                        <DockPanel Margin="0,0,0,8">
                            <TextBlock Text="Nom *:" 
                                       Foreground="LightGray" 
                                       Width="80"/>
                            <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" 
                                     Height="24"
                                     Background="#1E1E2F"
                                     Foreground="White"
                                     BorderBrush="#4A4A6A"/>
                        </DockPanel>

                        <!-- Adresse -->
                        <DockPanel Margin="0,0,0,8">
                            <TextBlock Text="Adresse *:" 
                                       Foreground="LightGray" 
                                       Width="80"/>
                            <TextBox Text="{Binding Address, UpdateSourceTrigger=PropertyChanged}" 
                                     Height="24"
                                     Background="#1E1E2F"
                                     Foreground="White"
                                     BorderBrush="#4A4A6A"/>
                        </DockPanel>

                        <!-- Ville -->
                        <DockPanel Margin="0,0,0,8">
                            <TextBlock Text="Ville *:" 
                                       Foreground="LightGray" 
                                       Width="80"/>
                            <TextBox Text="{Binding City, UpdateSourceTrigger=PropertyChanged}" 
                                     Height="24"
                                     Background="#1E1E2F"
                                     Foreground="White"
                                     BorderBrush="#4A4A6A"/>
                        </DockPanel>

                        <!-- Code postal -->
                        <DockPanel Margin="0,0,0,8">
                            <TextBlock Text="Code postal *:" 
                                       Foreground="LightGray" 
                                       Width="80"/>
                            <TextBox Text="{Binding PostalCode, UpdateSourceTrigger=PropertyChanged}" 
                                     Height="24"
                                     Background="#1E1E2F"
                                     Foreground="White"
                                     BorderBrush="#4A4A6A"/>
                        </DockPanel>

                        <!-- Latitude -->
                        <DockPanel Margin="0,0,0,8">
                            <TextBlock Text="Latitude *:" 
                                       Foreground="LightGray" 
                                       Width="80"/>
                            <TextBox Text="{Binding Latitude, UpdateSourceTrigger=PropertyChanged}" 
                                     Height="24"
                                     Background="#1E1E2F"
                                     Foreground="White"
                                     BorderBrush="#4A4A6A"/>
                        </DockPanel>
                    </StackPanel>

                    <!-- Colonne droite -->
                    <StackPanel Grid.Column="1" Margin="5,0,0,0">
                        <!-- Longitude -->
                        <DockPanel Margin="0,0,0,8">
                            <TextBlock Text="Longitude *:" 
                                       Foreground="LightGray" 
                                       Width="90"/>
                            <TextBox Text="{Binding Longitude, UpdateSourceTrigger=PropertyChanged}" 
                                     Height="24"
                                     Background="#1E1E2F"
                                     Foreground="White"
                                     BorderBrush="#4A4A6A"/>
                        </DockPanel>

                        <!-- Puissance -->
                        <DockPanel Margin="0,0,0,8">
                            <TextBlock Text="Puissance (kW):" 
                                       Foreground="LightGray" 
                                       Width="90"/>
                            <TextBox Text="{Binding PowerOutput, UpdateSourceTrigger=PropertyChanged}" 
                                     Height="24"
                                     Background="#1E1E2F"
                                     Foreground="White"
                                     BorderBrush="#4A4A6A"/>
                        </DockPanel>

                        <!-- Niveau de charge -->
                        <DockPanel Margin="0,0,0,8">
                            <TextBlock Text="Charge (%):" 
                                       Foreground="LightGray" 
                                       Width="90"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="40"/>
                                </Grid.ColumnDefinitions>
                                <Slider Grid.Column="0" 
                                        Value="{Binding ChargePercentage}" 
                                        Minimum="0" 
                                        Maximum="100" 
                                        VerticalAlignment="Center"/>
                                <TextBlock Grid.Column="1" 
                                           Text="{Binding ChargePercentage, StringFormat={}{0}%}" 
                                           Foreground="LightGray" 
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Center"/>
                            </Grid>
                        </DockPanel>

                        <!-- Statut -->
                        <DockPanel Margin="0,0,0,8">
                            <TextBlock Text="Statut:" 
                                       Foreground="LightGray" 
                                       Width="90"/>
                            <ComboBox ItemsSource="{Binding StatusOptions}" 
                                      SelectedItem="{Binding Status}"
                                      Height="24"
                                      Background="#1E1E2F"
                                      Foreground="White"
                                      BorderBrush="#4A4A6A"/>
                        </DockPanel>

                        <!-- Maintenance -->
                        <DockPanel Margin="0,0,0,8">
                            <TextBlock Text="Maintenance:" 
                                       Foreground="LightGray" 
                                       Width="90"/>
                            <CheckBox Content="En maintenance" 
                                      IsChecked="{Binding IsInMaintenance}" 
                                      Foreground="LightGray" 
                                      VerticalAlignment="Center"/>
                        </DockPanel>
                    </StackPanel>
                </Grid>

                <!-- Boutons d'action -->
                <StackPanel Grid.Row="2" 
                            Orientation="Horizontal" 
                            HorizontalAlignment="Center" 
                            Margin="0,10,0,0">
                    <Button x:Name="AnnulerButton"
                            Content="Annuler" 
                            Click="AnnulerButton_Click"
                            Background="#666666" 
                            Foreground="White" 
                            Padding="15,8" 
                            Width="120"
                            Margin="0,0,10,0"/>

                    <Button x:Name="EnregistrerButton"
                            Content="Enregistrer" 
                            Click="EnregistrerButton_Click"
                            Background="#4CAF50" 
                            Foreground="White" 
                            Padding="15,8" 
                            Width="120"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
