<UserControl x:Class="Solary_Gestionnaire.View.GestionnaireBornePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Solary_Gestionnaire.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="#1E1E2F">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- En-tête avec titre et bouton de rafraîchissement -->
        <Grid Grid.Row="0" Margin="20,20,20,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Gestion des Bornes de Recharge" 
                       FontSize="24" 
                       Foreground="White" 
                       FontWeight="Bold"/>

            <Button Grid.Column="1" 
                    Content="🔄 Actualiser" 
                    Click="RefreshButton_Click"
                    Background="#4A90E2" 
                    Foreground="White" 
                    Padding="10,5"/>
        </Grid>

        <!-- Indicateur de chargement et message d'erreur -->
        <StackPanel Grid.Row="1" Margin="20,0,20,10">
            <!-- Indicateur de chargement -->
            <ProgressBar Height="5" 
                         IsIndeterminate="True" 
                         Visibility="{Binding LoadingVisibility}"/>

            <!-- Message d'erreur -->
            <TextBlock Text="{Binding ErrorMessage}" 
                       Foreground="#D0021B" 
                       FontSize="14" 
                       TextWrapping="Wrap"
                       Margin="0,5,0,0"
                       Visibility="{Binding ErrorVisibility}"/>
        </StackPanel>

        <!-- Liste des bornes -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" Margin="20,0,20,20">
            <ItemsControl ItemsSource="{Binding Bornes}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="#2A2A3D" CornerRadius="10" Padding="15" Margin="0,0,0,10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="{Binding borne_id, StringFormat=Borne ID: {0}}" 
                                               Foreground="White" FontSize="16" FontWeight="Bold"/>

                                    <TextBlock Text="{Binding location, StringFormat=📍 Emplacement: {0}}" 
                                               Foreground="LightGray" FontSize="14" Margin="0,5,0,0"/>

                                    <!-- Disponibilité sans converter -->
                                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                        <TextBlock Text="✅ Disponible: " 
                                                   Foreground="LightGray" 
                                                   FontSize="14"/>
                                        <TextBlock FontSize="14">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding is_available}" Value="1">
                                                            <Setter Property="Text" Value="Oui"/>
                                                            <Setter Property="Foreground" Value="LightGreen"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding is_available}" Value="0">
                                                            <Setter Property="Text" Value="Non"/>
                                                            <Setter Property="Foreground" Value="Red"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </StackPanel>

                                    <TextBlock Text="{Binding created_at, StringFormat=🕒 Créée le: {0}}" 
                                               Foreground="LightGray" FontSize="14" Margin="0,5,0,0"/>
                                </StackPanel>

                                <!-- Indicateur visuel de disponibilité sans converter -->
                                <Ellipse Grid.Column="1" Width="16" Height="16" Margin="0,0,5,0" VerticalAlignment="Top">
                                    <Ellipse.Style>
                                        <Style TargetType="Ellipse">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding is_available}" Value="1">
                                                    <Setter Property="Fill" Value="Green"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding is_available}" Value="0">
                                                    <Setter Property="Fill" Value="Red"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Ellipse.Style>
                                </Ellipse>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</UserControl>
