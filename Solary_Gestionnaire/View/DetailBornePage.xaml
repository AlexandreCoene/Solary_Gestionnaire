<UserControl x:Class="Solary_Gestionnaire.View.DetailBornePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Solary_Gestionnaire.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid x:Name="MainGrid" Background="#1E1E2F">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- En-tête avec titre et bouton de retour -->
        <Grid Grid.Row="0" Margin="20,20,20,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Content="← Retour" 
                    Click="RetourButton_Click"
                    Background="Transparent" 
                    Foreground="White" 
                    BorderThickness="0"
                    Padding="5"
                    Margin="0,0,10,0"/>

            <TextBlock Grid.Column="1" 
                       Text="{Binding Name, StringFormat=Détails de la borne: {0}}" 
                       FontSize="24" 
                       Foreground="White" 
                       FontWeight="Bold"/>
        </Grid>

        <!-- Contenu détaillé de la borne -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="20,0,20,20">
            <Border Background="#2A2A3D" CornerRadius="10" Padding="20" Margin="0,0,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Informations principales -->
                    <StackPanel Grid.Column="0">
                        <!-- ID et statut -->
                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="{Binding BorneId, StringFormat=ID: {0}}" 
                                       Foreground="White" 
                                       FontSize="16" 
                                       FontWeight="Bold"/>

                            <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
                                <TextBlock Text="Statut: " 
                                           Foreground="LightGray" 
                                           FontSize="16"
                                           Margin="0,0,5,0"/>
                                <TextBlock Text="{Binding Status}" 
                                           FontSize="16"
                                           FontWeight="Bold">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Foreground" Value="LightGray"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Status}" Value="disponible">
                                                    <Setter Property="Foreground" Value="LightGreen"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Status}" Value="occupé">
                                                    <Setter Property="Foreground" Value="Red"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Status}" Value="hors service">
                                                    <Setter Property="Foreground" Value="Red"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>

                                <!-- Indicateur visuel de statut -->
                                <Ellipse Width="16" Height="16" 
                                         VerticalAlignment="Center"
                                         Margin="5,0,0,0">
                                    <Ellipse.Style>
                                        <Style TargetType="Ellipse">
                                            <Setter Property="Fill" Value="Gray"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Status}" Value="disponible">
                                                    <Setter Property="Fill" Value="Green"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Status}" Value="occupé">
                                                    <Setter Property="Fill" Value="Red"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Status}" Value="hors service">
                                                    <Setter Property="Fill" Value="Red"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding IsInMaintenance}" Value="True">
                                                    <Setter Property="Fill" Value="Orange"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Ellipse.Style>
                                </Ellipse>
                            </StackPanel>
                        </Grid>

                        <!-- Séparateur -->
                        <Separator Margin="0,0,0,15" Background="#3F3F5F"/>

                        <!-- Informations de localisation -->
                        <TextBlock Text="Informations de localisation" 
                                   Foreground="White" 
                                   FontSize="18" 
                                   FontWeight="Bold"
                                   Margin="0,0,0,10"/>

                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Adresse -->
                            <TextBlock Grid.Row="0" Grid.Column="0" 
                                       Text="Adresse:" 
                                       Foreground="LightGray" 
                                       FontSize="14"
                                       Margin="0,0,0,5"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" 
                                       Text="{Binding Address}" 
                                       Foreground="White" 
                                       FontSize="14"
                                       Margin="0,0,0,5"/>

                            <!-- Ville -->
                            <TextBlock Grid.Row="1" Grid.Column="0" 
                                       Text="Ville:" 
                                       Foreground="LightGray" 
                                       FontSize="14"
                                       Margin="0,0,0,5"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" 
                                       Text="{Binding City}" 
                                       Foreground="White" 
                                       FontSize="14"
                                       Margin="0,0,0,5"/>

                            <!-- Code postal -->
                            <TextBlock Grid.Row="2" Grid.Column="0" 
                                       Text="Code postal:" 
                                       Foreground="LightGray" 
                                       FontSize="14"
                                       Margin="0,0,0,5"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" 
                                       Text="{Binding PostalCode}" 
                                       Foreground="White" 
                                       FontSize="14"
                                       Margin="0,0,0,5"/>

                            <!-- Coordonnées GPS -->
                            <TextBlock Grid.Row="3" Grid.Column="0" 
                                       Text="Coordonnées GPS:" 
                                       Foreground="LightGray" 
                                       FontSize="14"
                                       Margin="0,0,0,5"/>
                            <TextBlock Grid.Row="3" Grid.Column="1" 
                                       Text="{Binding Coordinates}" 
                                       Foreground="White" 
                                       FontSize="14"
                                       Margin="0,0,0,5"/>
                        </Grid>

                        <!-- Séparateur -->
                        <Separator Margin="0,0,0,15" Background="#3F3F5F"/>

                        <!-- Informations techniques -->
                        <TextBlock Text="Informations techniques" 
                                   Foreground="White" 
                                   FontSize="18" 
                                   FontWeight="Bold"
                                   Margin="0,0,0,10"/>

                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Puissance -->
                            <TextBlock Grid.Row="0" Grid.Column="0" 
                                       Text="Puissance:" 
                                       Foreground="LightGray" 
                                       FontSize="14"
                                       Margin="0,0,0,5"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" 
                                       Text="{Binding PowerOutput, StringFormat={}{0} kW}" 
                                       Foreground="White" 
                                       FontSize="14"
                                       Margin="0,0,0,5"/>

                            <!-- Niveau de charge -->
                            <TextBlock Grid.Row="1" Grid.Column="0" 
                                       Text="Niveau de charge:" 
                                       Foreground="LightGray" 
                                       FontSize="14"
                                       Margin="0,0,0,5"/>
                            <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal">
                                <TextBlock Text="{Binding ChargePercentage, StringFormat={}{0}%}" 
                                           Foreground="White" 
                                           FontSize="14"
                                           Margin="0,0,10,5"/>
                                <ProgressBar Width="200" 
                                             Height="15" 
                                             Value="{Binding ChargePercentage, Mode=OneWay}" 
                                             Maximum="100"
                                             VerticalAlignment="Center">
                                    <ProgressBar.Style>
                                        <Style TargetType="ProgressBar">
                                            <Setter Property="Foreground" Value="Green"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding ChargePercentage}" Value="True">
                                                    <Setter Property="Foreground" Value="Red"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </ProgressBar.Style>
                                </ProgressBar>
                            </StackPanel>

                            <!-- Maintenance -->
                            <TextBlock Grid.Row="2" Grid.Column="0" 
                                       Text="Maintenance:" 
                                       Foreground="LightGray" 
                                       FontSize="14"
                                       Margin="0,0,0,5"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" 
                                       Text="{Binding MaintenanceStatus}" 
                                       Foreground="{Binding MaintenanceColor}" 
                                       FontSize="14"
                                       FontWeight="Bold"
                                       Margin="0,0,0,5"/>
                        </Grid>

                        <!-- Séparateur -->
                        <Separator Margin="0,0,0,15" Background="#3F3F5F"/>

                        <!-- Informations temporelles -->
                        <TextBlock Text="Informations temporelles" 
                                   Foreground="White" 
                                   FontSize="18" 
                                   FontWeight="Bold"
                                   Margin="0,0,0,10"/>

                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Date de création -->
                            <TextBlock Grid.Row="0" Grid.Column="0" 
                                       Text="Créée le:" 
                                       Foreground="LightGray" 
                                       FontSize="14"
                                       Margin="0,0,0,5"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" 
                                       Text="{Binding CreatedAt}" 
                                       Foreground="White" 
                                       FontSize="14"
                                       Margin="0,0,0,5"/>

                            <!-- Dernière utilisation -->
                            <TextBlock Grid.Row="1" Grid.Column="0" 
                                       Text="Dernière utilisation:" 
                                       Foreground="LightGray" 
                                       FontSize="14"
                                       Margin="0,0,0,5"
                                       Visibility="{Binding LastUsedAt}"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" 
                                       Text="{Binding LastUsedAt}" 
                                       Foreground="White" 
                                       FontSize="14"
                                       Margin="0,0,0,5"
                                       Visibility="{Binding LastUsedAt}"/>
                        </Grid>
                    </StackPanel>

                    <!-- Boutons d'action -->
                    <StackPanel Grid.Column="1" Margin="20,0,0,0" Width="120">
                        <Button Content="✏️ Modifier" 
                                Background="#4A90E2" 
                                Foreground="White" 
                                Padding="10,5" 
                                Margin="0,0,0,10"
                                Click="ModifierBorne_Click"/>

                        <Button Content="🗑️ Supprimer" 
                                Background="#D32F2F" 
                                Foreground="White" 
                                Padding="10,5"
                                Click="SupprimerBorne_Click"/>
                    </StackPanel>
                </Grid>
            </Border>
        </ScrollViewer>
    </Grid>
</UserControl>